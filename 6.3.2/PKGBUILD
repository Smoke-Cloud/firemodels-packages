# Maintainer: Your Name <youremail@domain.com>
pkgname=fds-6.3.2
pkgver=6.3.2
pkgrel=1
epoch=
pkgdesc="Fire Dynamics Simulator (FDS) from NIST."
arch=('x86_64')
url="https://pages.nist.gov/fds-smv/"
license=('PublicDomain')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!strip)
install=
changelog=
source=("https://github.com/firemodels/fds/releases/download/Git-r5/FDS_6.3.2-SMV_6.3.2_linux64.sh")
noextract=()
sha1sums=('SKIP')
validpgpkeys=()

prepare() {
        chmod 755 "$srcdir/FDS_6.3.2-SMV_6.3.2_linux64.sh"
        rm -f "$srcdir/FDS_6.3.2-SMV_6.3.2_linux64.tar.gz"
        echo "extract" | "$srcdir/FDS_6.3.2-SMV_6.3.2_linux64.sh"
}

build() {
        echo "done"
}

check() {
        echo "done"
}

package() {
        FINAL_INSTALL_DIR=/opt/FDS/$pkgver+nist.ifort
        INSTALLDIR=$pkgdir$FINAL_INSTALL_DIR
        mkdir -p $INSTALLDIR
        tar -xzvf FDS_6.3.2-SMV_6.3.2_linux64.tar.gz --directory $INSTALLDIR
        mv ${INSTALLDIR}/bin/fds ${INSTALLDIR}/bin/fds-exec
        echo "#!/bin/sh" > ${INSTALLDIR}/setup.sh
        echo "export LD_LIBRARY_PATH=${FINAL_INSTALL_DIR}/bin/LIB64:\$LD_LIBRARY_PATH" >> ${INSTALLDIR}/setup.sh
        echo "#!/bin/sh" > ${INSTALLDIR}/bin/fds
        echo "source ${FINAL_INSTALL_DIR}/setup.sh" >> ${INSTALLDIR}/bin/fds
        echo "${FINAL_INSTALL_DIR}/bin/fds-exec \"\$@\"" >> ${INSTALLDIR}/bin/fds
        chmod 755 ${INSTALLDIR}/setup.sh
        chmod 755 ${INSTALLDIR}/bin/fds
        chown root:root $pkgdir -R
}
